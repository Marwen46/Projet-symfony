 {% extends 'base.html.twig' %}
  {% block title %}RegisterCandidat{% endblock %} 
  {% blockbody %} 
    {% for flashError in app.flashes('verify_email_error') %}
      <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container">
  <h1>A little more</h1>
  <div class="row">
    <div class="col-md-8">{{ form_start(CandidatRegistrationForm) }}</div>
    <div class="col-md-8">{{ form_row(CandidatRegistrationForm.Nom) }}</div>
    <div class="col-md-8">{{ form_row(CandidatRegistrationForm.Prenom) }}</div>
    <div class="col-md-8">{{ form_row(CandidatRegistrationForm.Age) }}</div>
    <div class="col-md-8">{{ form_row(CandidatRegistrationForm.Email) }}</div>
    <button type="submit" class="btn btn-primary rounded">Submit</button>
  {{ form_end(CandidatRegistrationForm) }}
</div>
{% endblock %}
