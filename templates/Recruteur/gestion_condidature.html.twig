{% extends 'base.html.twig' %} {% block title %}Hello GestionCondidature!{%
endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="container">
  <div class="container pl-0">
    <h2 class="my-1 font-weight-bold">Listes des candidatures :</h2>
    {% if Candidatures %}
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Prenom</th>
          <th scope="col">Nom</th>
          <th scope="col">Age</th>
          <th scope="col">Experience</th>
          <th scope="col">CV</th>
          <th scope="col">Action</th>
        </tr>
      </thead>

      <tbody>
        {% for v in Candidatures %}
        <tr>
          <td class="text-nowrap">{{ loop.index }}</td>
          <td class="text-nowrap">{{ v.prenom }}</td>
          <td class="text-nowrap">{{ v.nom }}</td>
          <td class="text-nowrap">{{ v.age }}</td>
          <td class="text-nowrap">{{ v.experience }}</td>
          <td class="text-nowrap">
            <a
              href="{{
                path('telecharger_candidature_cv', { filename: v.CvFilename })
              }}"
              class="btn btn-primary rounded btn-sm"
              >télécharger</a
            >
          </td>
          <td class="d-flex">
            <a
              href="{{ path('supprimer_candidature', { id: v.id }) }}"
              class="btn btn-danger rounded btn-sm"
              >✘</a
            >

            <a
              href="{{ path('modifier_recruteur', { id: v.id }) }}"
              class="btn btn-success rounded btn-sm mx-2"
              ><span style="font-weight: bold">&#10003;</span></a
            >
          </td>
        </tr>

        {% endfor %} {% else %}
        <h3 class="mt-5 d-flex justify-content-center">
          pas des candidatures trouvée :(
        </h3>
        {% endif %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
