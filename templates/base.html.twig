    {% block javascripts %}
    <script>
$('.custom-file-input').on('change', function(event) {
            var inputFile = event.currentTarget;
            if(inputFile.files.length===0){
                $(inputFile).parent()
                    .find('.custom-file-label')
                    .text()("Selectionner un fichier svp");
            }else {
                $(inputFile).parent()
                    .find('.custom-file-label')
                    .text()(inputFile.files[0].name);
            }

        });
    </script>
    {% endblock %}
    <meta charset="UTF-8" />
