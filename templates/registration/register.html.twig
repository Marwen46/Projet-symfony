 {% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block
body %} {% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<div class="container">
  <h1>Register</h1>
  <div class="row">
    <div class="col-md-8">{{ form_start(registrationForm) }}</div>
    <div class="col-md-8">{{ form_row(registrationForm.email) }}</div>
    <div class="col-md-8">
      {{ form_row(registrationForm.plainPassword, { label: "Password" }) }}
    </div>
    <div class="col-md-8">{{ form_row(registrationForm.agreeTerms) }}</div>
  </div>
  <button type="submit" class="btn btn-primary rounded">Register</button>
  {{ form_end(registrationForm) }}
</div>
{% endblock %}
