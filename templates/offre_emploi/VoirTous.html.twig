{% extends 'dashboard.html.twig' %} 
{% block title %}Offre Emploi{% endblock %} 
{% block body %}
<div class="container">
 <div class="row">
  <div class="col-md-3">
    {{ form_start(form,{attr:{class:'filter'}}) }}
     <h5>Rechercher </h5>
     {{form_row(form.q)}}
     <h5>Filtrer </h5>
     {{form_row(form.categorie)}}
    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
    {{ form_end(form) }}
  </div>
  <div class="col-md-9">
    {% for o in offres %}
    {% if o.etat %}
    <div class="card mb-3" style="max-width: 100%">
      <div class="row no-gutters">
        <div class="card-body" style="max-width: 100%">
          <a href="{{ path('voir_offre_en_detail',{id : o.id})}}" class="font-weight-bold text-primary"><h4>{{ o.titre }}</h4></a>
          <div>
            <p class="text-muted mb-0"><i class="far fa-building mr-1"></i>Web Creative.pvt.Ltd</p>
                                                <ul class="list-inline mb-0">
                                                    <li class="list-inline-item mr-3">
                                                        <p class="text-muted mb-0"><i class="fas fa-map-marker-alt mr-1"></i>{{o.emplacement}}</p>
                                                    </li>

                                                    <li class="list-inline-item">
                                                        <p class="text-muted mb-0"><i class="far fa-clock mr-1"></i>{{o.createdAt|date('d/m/Y',"Africa/Tunis") }}</p>
                                                    </li>
                                                </ul>
          
              <div class="d-flex justify-content-end">
              <a href="{{ path('voir_offre_en_detail',{id : o.id})}}" class="btn btn-primary rounded btn-sm ">Detail</a>
            </div>
          </div>
        </div>
      </div>
    </div>
      {% endif %}
      {% endfor %}
   
  <div class="pagination justify-content-center">
    {{ knp_pagination_render(offres) }}
  </div>
  </div>
 </div>
</div>
{% endblock %}
