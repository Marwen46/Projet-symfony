{% extends 'dashboard.html.twig' %} {% block title %}Hello
GestionComptesController!{% endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>
  <div class="container pl-0">
    <h2 class="my-1 font-weight-bold">Listes des recruteurs :</h2>
    <a href="{{ path('ajouter_recruteur') }}" class="btn btn-link pl-0"
      >Ajouter recruteur</a
    >
    {% if recruteurs %}
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Agence</th>
          <th scope="col">Adresse</th>
          <th scope="col">Téléphone</th>
          <th scope="col">Action</th>
        </tr>
      </thead>

      <tbody>
        {% for v in recruteurs %}
        <tr>
          <td class="text-nowrap">{{ v.id }}</td>
          <td class="text-nowrap">{{ v.Nom }}</td>
          <td class="text-nowrap">{{ v.Adresse }}</td>
          <td class="text-nowrap">{{ v.Telephone }}</td>
          <td class="d-flex">
            <a
              href="{{ path('afficher_recruteur', { id: v.id }) }}"
              class="btn btn-link btn-sm"
              >afficher</a
            >
            |
            <a
              href="{{ path('modifier_recruteur', { id: v.id }) }}"
              class="btn btn-link btn-sm"
              >modifier</a
            >
            |
            <a
              href="{{ path('supprimer_recruteur', { id: v.id }) }}"
              class="btn btn-sm btn-link"
              >supprimer</a
            >
          </td>
        </tr>

        {% endfor %} {% else %}
        <h3>pas des recruteurs trouvée</h3>
        {% endif %}
      </tbody>
    </table>
  </div>
{% endblock %}
