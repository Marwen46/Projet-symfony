{% extends 'dashboard.html.twig' %} {% block title %}Hello
GestionComptesController!{% endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="container">
  <h2 class="my-1 font-weight-bold">Les Régles:</h2>
  {% if regles %}
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Durée Inactif Max (en jour)</th>
        <th scope="col">Nombre postulation maximal</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      {% for v in regles %}
      <tr>
        <td class="text-nowrap">{{ v.id }}</td>
        <td class="text-nowrap">{{ v.duree  }}</td>
        <td class="text-nowrap">{{ v.limitePostulation }}</td>
        <td class="d-flex">
          
            <a
              href="{{ path('modifier_Regles', { id: v.id }) }}"
              class="btn btn-primary btn-sm"
              ><i class="fas fa-edit"></i></a
            >
        </td>
      </tr>

      {% endfor %} {% else %}
      <h3>pas des regles trouvées</h3>
      {% endif %}
    </tbody>
  </table>
</div>
{% endblock %}
