{% extends 'dashboard.html.twig' %} {% block title %}Hello
GestionComptesController!{% endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="container">
  <h2 class="my-1 font-weight-bold">Liste des candidats Inactifs:</h2>
  {% if candidats %}
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nom</th>
        <th scope="col">Prenom</th>
        <th scope="col">Age</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      {% for v in candidats %}
      {% if v.Inactif %}
      <tr>
        <td class="text-nowrap">{{ v.id }}</td>
        <td class="text-nowrap">{{ v.Nom }}</td>
        <td class="text-nowrap">{{ v.Prenom }}</td>
        <td class="text-nowrap">{{ v.Age }}</td>
        <td class="text-nowrap">{{ v.Email }}</td>
        <td class="d-flex">
          <a
            href="{{ path('supprimer_candidat', { id: v.id }) }}"
            class="btn btn-sm btn-danger"
            ><i class="fas fa-trash-alt"></i></a
          >
        </td>
      </tr>
      {% endif %}
      {% endfor %} {% else %}
      <h3>pas des candidats trouv√©e</h3>
      {% endif %}
    </tbody>
  </table>
</div>
{% endblock %}
