{% extends 'dashboard.html.twig' %} {% block title %}Hello
GestionComptesController!{% endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

  <div class="container">
    <h2 class="my-1 font-weight-bold">Listes des administrateurs :</h2>
    <a href="{{ path('ajouter_administrateur') }}" class="btn btn-primary btn-sm mb-1 pl-0"> <i class="fas fa-plus">  </i> Ajouter administrateur</a>
    {% if administrateurs %}
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Nom</th>
          <th scope="col">Prenom</th>
          <th scope="col">Action</th>
        </tr>
      </thead>

      <tbody>
        {% for v in administrateurs %}
        <tr>
          <td class="text-nowrap">{{ v.id }}</td>
          <td class="text-nowrap">{{ v.Nom }}</td>
          <td class="text-nowrap">{{ v.Prenom }}</td>
          <td class="d-flex">
            <a
              href="{{ path('afficher_administrateur', { id: v.id }) }}"
              class="btn btn-primary btn-sm"
              ><i class="fas fa-search-plus"></i></a>
            &nbsp;
            <a href="{{ path('modifier_administrateur', { id: v.id }) }}"
              class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
            &nbsp;
            <a href="{{ path('supprimer_administrateur', { id: v.id }) }}"
              class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
          </td>
        </tr>

        {% endfor %}
        
         {% else %}
        <h3>pas des Administrateurs trouv√©e</h3>
        {% endif %}
      </tbody>
    </table>
</div>
{% endblock %}
