{% extends 'dashboard.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 2px; }
</style>

<div>

<div class="container">
  <h2 class="my-5 font-weight-bold" >Listes des Categories :</h2>
  <a href="{{ path('ajouter_categorie') }}" class="btn btn-primary btn-sm mb-1 "><i class="fas fa-plus"></i> ajouter Categorie</a>
  {% if categories %}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom categorie</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
    
        <tbody>
        {% for cat in categories %}
            <tr>
                <td class="text-nowrap">{{ cat.id }}</td>
                <td class="text-nowrap">{{ cat.nomCategorie }}</td>
                <td class="d-flex">
                    <a href="{{ path('voirCategorie', {'id': cat.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-search-plus"></i></a>&nbsp; 
                    <a href="{{ path('modifierCategorie', {'id': cat.id}) }}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>&nbsp;
                    <a href="{{ path('supprimerCategorie', {'id': cat.id}) }}" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
        {% else %}
        <h3>pas de categorie trouv√©e</h3>
        {% endif %}
        </tbody>
  
    </table>
    </div>
</div>
{% endblock %}